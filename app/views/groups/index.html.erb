
 

<div class="container-fluid " >
    <%@groups.each do |group|%>
    <div class="d-flex align-items-center justify-content-between border bg-white mt-2">
        <%if group.icon.persisted? && group.icon.image? %>
            <%= link_to group_path(group.id) do %>
                <%= image_tag group.icon, class: 'group-img'  %>  
            <%end%>
        <%end%>
        <div class="ms-2">
            <p class='fw-bold txt-gray'><%= group.name  %></p>
            <p class='small txt-gray'><%= group.created_at.strftime('%d %m %Y')  %></p>            
        </div>
        <% total = 0 %>
        <% group.purchases.each do |p| %>              
            <% total += p.amount||0 %>
        <% end %>
        <p class='fw-bold flex-grow-1 text-end me-2'>$<%= total %></p>
    </div>
    <%end%>
</div>

